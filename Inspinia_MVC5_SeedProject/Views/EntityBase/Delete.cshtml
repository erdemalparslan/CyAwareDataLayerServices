@model Inspinia_MVC5_SeedProject.Models.EntityBase

@{
    string entityType = ViewContext.RouteData.Values["type"].ToString();
    ViewBag.Title = "Delete " + entityType;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Delete</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index", "EntityBase")
            </li>
            <li class="active">
                <strong>Delete</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Back to List", "Index", "EntityBase", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Delete @entityType</h5>
                </div>
                <div class="ibox-content">
				<h4 class="text-danger">Are you sure you want to delete this?</h4>
				 <dl class="dl-horizontal">
                 <dt>
                     @Html.DisplayNameFor(model => model.subscriberId)
                 </dt>

                 <dd>
                     @Html.DisplayFor(model => model.subscriberId)
                 </dd>

                 @if (entityType.Equals("Ip"))
                 {
                     <dt>
                         @Html.DisplayNameFor(model => model.ip)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.ip)
                     </dd>
                 }

                 @if (entityType.Equals("Email"))
                 {
                     <dt>
                         @Html.DisplayNameFor(model => model.emailAddress)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.emailAddress)
                     </dd>
                 }

                 @if (entityType.Equals("Port"))
                 {
                     <dt>
                         @Html.DisplayNameFor(model => model.port)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.port)
                     </dd>
                 }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-white"})
        </div>
    }

                </div>
            </div>
        </div>
    </div>
 </div>


