@using Inspinia_MVC5_SeedProject.Models;

<div class="col-lg-6">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Email Addresses</h5>
            <div class="ibox-tools">
                @Html.ActionLink("Create New", "Create/Email", null, new { id = "btnSocNet", @class = "btn btn-primary btn-xs createBtn" })
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-striped">
                <tr>
                    <th>
                        Subscriber Id
                    </th>
                    <th>
                        Email Addresses
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>

                @foreach (Email item in ViewBag.Emails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.subscriberId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.address)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit/Email", new { id = item.id })" class="editBtn"><i class="fa fa-edit fa-lg"></i></a>
                            <a href="@Url.Action("Delete/Email", new { id = item.id })" class="deleteBtn"><i class="fa fa-remove fa-lg"></i></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

