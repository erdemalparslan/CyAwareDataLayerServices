                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscriminatorValue)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
