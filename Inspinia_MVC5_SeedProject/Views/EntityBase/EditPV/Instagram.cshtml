@model Inspinia_MVC5_SeedProject.Models.InstagramProfile
@using Inspinia_MVC5_SeedProject.App_LocalResources

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">@Resource.EditHeaderInstProf</h4>
</div>
<div class="modal-body">
    @using (Html.BeginForm("EditInstagram", "EntityBase"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.idStr, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.idStr)
                    @Html.ValidationMessageFor(model => model.idStr)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.searchStringForUnusualContent, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.searchStringForUnusualContent)
                    @Html.ValidationMessageFor(model => model.searchStringForUnusualContent)
                </div>
            </div>
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.entityType)
            @Html.HiddenFor(model => model.subscriberId)
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Resource.CancelBtn</button>
            <button type="submit" class="btn btn-primary">@Resource.UpdateBtn</button>
        </div>
    }
</div>

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryValUnobt")